{
  "name": "api-gdrive",
  "version": "1.0.0",
  "description": "Api de node - Typescript para conexi√≥na a Google Drive.",
  "main": "src/server.ts",
  "scripts": {
    "ts": "tsc -w",
    "build": "tsc",
    "start": "npm run coverage && tsc && node ./build/src/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "dev-js": "nodemon ./build/src/server.js",
    "test": "jest --detectOpenHandles --runInBand --forceExit",
    "test-watch": "npm test -- --watchAll --runInBand",
    "coverage": "npm test -- --coverage --no-cache --detectOpenHandles",
    "coverage-watch": "npm run coverage -- --forceExit --watch",
    "lint": "eslint --ext .tsx,.ts src",
    "lint-fix": "eslint --ext .tsx,.ts --fix src"
  },
  "author": "Necroxos",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.27.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-validator": "^6.12.2",
    "helmet": "^5.0.2",
    "joi": "^17.6.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-validator": "^3.0.0",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^27.4.1",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.29.0",
    "eslint": "^8.10.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "3.1.0",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run coverage"
    }
  },
  "directories": {
    "test": "test",
    "build": "build",
    "coverage": "coverage"
  }
}
